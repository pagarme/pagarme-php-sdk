{
    "name": "pagarme/pagarme-php-sdk",
    "description": "Pagarme API",
    "type": "library",
    "keywords": [
        "PagarmeApiSDK",
        "API",
        "SDK"
    ],
    "homepage": "https://github.com/pagarme/",
    "license": "MIT",
    "authors": [
        {
            "name": "Pagar.me Pagamentos S/A",
            "email": "suporte@pagar.me",
            "homepage": "https://github.com/pagarme/"
        }
    ],
    "require": {
        "php": ">=7.2 <8.2",
        "ext-curl": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "apimatic/unirest-php": "^2.2.1",
        "apimatic/jsonmapper": "^3.0.0"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.5",
        "phan/phan": "5.3.1"
    },
    "autoload": {
        "psr-4": {
            "PagarmeApiSDKLib\\": "src/"
        }
    },
    "scripts": {
        "lint": "phpcs --standard=phpcs-ruleset.xml src/",
        "lint-fix": "phpcbf --standard=phpcs-ruleset.xml src/",
        "analyze": "phan --allow-polyfill-parser"
    }
}